<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDeepLinkTester" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Theme.MyDeepLinkTester">
        <item name="android:height">@dimen/size_60</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Theme.MyDeepLinkTester.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="hintTextColor">@color/hint_light_white</item>
        <item name="android:textColorHint">@color/hint_light_white</item>
    </style>
</resources>